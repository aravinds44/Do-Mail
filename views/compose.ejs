<!-- Page content -->
<div class="content">
<div class="container">
    <h2 class="display-3">Compose Mail</h1>

    <form action="/compose" method="POST">

      <div class="form-group">
        <label for="toUser">To:</label>
        <input type="email" class="form-control" id="toUser" name="toUser" placeholder="name@example.com">
      </div>
      <div class="form-group">
        <label for="subject">Subject:</label>
        <input type="text" class="form-control" id="subject" name="subject" >
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-control" id="content" name="content" placeholder="email content" rows="3"></textarea>
      </div>
        

        

        
      
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>

  </div>
</div>

